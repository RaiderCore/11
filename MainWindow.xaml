<Window x:Class="ArrayTasks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Array Tasks" Height="450" Width="800">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBox x:Name="TaskNumberTextBox" Width="200" Margin="10" Text="Введите номер задачи (1-29)" />
        <Button Content="Решить задачу" Click="SolveButton_Click" Width="200" Margin="10" />
        <TextBlock x:Name="ResultTextBlock" Margin="10" TextWrapping="Wrap" />
    </StackPanel>
</Window>